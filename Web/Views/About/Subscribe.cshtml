
@{
    ViewData["Title"] = "Subscribe";
}

<div class="container">
	<div class="row">
		<div class="col">
			<div class="jumbotron" style="border-style: solid; border-color: blue">
				<h1>Subscribe</h1>
				<h4>Subscribe to our mailing list for news and updates about SFEOS, and/or...</h4>
				<h4>follow our blog on <a class="badge badge-pill badge-primary" href="http://www.steemit.com/@@sfeos" target="_blank">Steemit</a> (We highly recommend getting yourself an account).</h4>
			</div>
			<div class="row">
				<div class="col-xl-6 offset-xl-3">
					
					<!-- Begin MailChimp Signup Form -->
					<div id="mc_embed_signup">
						<form action="https://legacygameworks.us5.list-manage.com/subscribe/post?u=5115516cde12daaa8b6e876ae&amp;id=451cc8b292" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
							
							<div id="mc_embed_signup_scroll">

								<div class="mc-field-group form-group">
									<label for="mce-EMAIL">
										Email Address  <span class="asterisk">*</span>
									</label>
									<input type="email" value="" name="EMAIL" class="required email form-control" id="mce-EMAIL">
									<p class="form-text text-muted">
										<span class="asterisk">*</span> indicates required
									</p>
								</div>
								<div class="mc-field-group form-group">
									<label for="mce-FNAME">First Name </label>
									<input type="text" value="" name="FNAME" class="form-control" id="mce-FNAME">
								</div>
								<div id="mce-responses" class="clear">
									<div class="response" id="mce-error-response" style="display:none"></div>
									<div class="response" id="mce-success-response" style="display:none"></div>
								</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
								<div style="position: absolute; left: -5000px;" aria-hidden="true">
									<input type="text" name="b_5115516cde12daaa8b6e876ae_451cc8b292" tabindex="-1" value="">
								</div>
								<div class="clear">
									<input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button btn btn-primary">
								</div>
							</div>
						</form>
					</div>

					<!--End mc_embed_signup-->

				</div>
			</div>
		</div>
	</div>
</div>